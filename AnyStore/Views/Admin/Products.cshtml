
@{
    ViewData["Title"] = "Products";
    Layout = "_AdminLayout";
}

<div class="grid-header">
    <div class="grid-header-label">
        <h3>Товары</h3>
    </div>
    <div class="grid-header-btn-dv">
        <button id="open_add_product_window_btn" type="button">Добавить</button>
    </div>
</div>
<div id="dvProducts"></div>

<div class="add-window" id="add_window">
    <form id="product_form" enctype="multipart/form-data">
        <div class="window-ls">
            <label for="product_name_inp">Название</label><br />
            <input class="w100" name="Name" id="product_name_inp" required /><br /><br />
            <label for="product_title_inp">Заголовок</label><br />
            <input class="w100" name="Title" id="product_title_inp" required />
        </div>
        <div class="window-rs">
            <label for="categories_ddl">Категория</label><br />
            <input class="w100" name="CategoryId" id="categories_ddl" required /><br /><br />
            <label for="product_price_inp">Цена</label><br />
            <input class="w100" name="SellingPrice" value="0" min="0" id="product_price_inp" />
        </div>
        <div class="window-c">
            <input type="file" name="Image" id="product_image" />
            <br />
            <input type="file" name="Images" id="product_images" />
        </div>
        <div class="window-c">
            <label for="product_description_ta">Описание</label>
            <textarea name="Description" id="product_description_ta"></textarea>
        </div>
        <button id="cancel_save_product_btn" type="button">Отмена</button>
        <button id="save_product_btn" type="button">Сохранить</button>
    </form>
</div>

<script src="~/js/Products.js?v=1"></script>
<script>
    if (ProductsContext)
        ProductsContext.init();

</script>

