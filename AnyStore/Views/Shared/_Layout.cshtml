                                    <p>Закажи в онлайне сейчас!</p>
                                </div>
                            </div>
                        </div>
                        <!-- End Single-Support -->
                    </div>
                </div>
                <!-- End Support-Client -->
                <!-- Start logo & Search Box -->
                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        <div class="logo">
                            <a href="#" title="Наш магаз">Наш Магаз</a>
                        </div>
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <div class="quick-access">
                            <div class="search-by-category">
                                <div class="header-search">
                                    <form action="#">
