
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Any Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/kendo2020.common.min.css" rel="stylesheet" />
    <script src="~/js/jquery2020.min.js"></script>
    <script src="~/js/kendo2020.all.min.js"></script>
    <script src="~/js/kendo.messages.ru-RU.min.js"></script>
    <link href="~/css/kendo.custom.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/admin.css" />
    <script src="~/js/CommonHelper.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="as-nav-link" name="categories" asp-area="" asp-controller="Admin" asp-action="Categories">Категории</a>
                        </li>
                        <li class="nav-item">
                            <a class="as-nav-link" name="products" asp-area="" asp-controller="Admin" asp-action="Products">Товары</a>
                        </li>
                        <li class="nav-item">
                            <a class="as-nav-link" name="settings" asp-area="" asp-controller="Admin" asp-action="Settings">Настройки</a>
                        </li>
                        <li class="nav-item">
                            <a class="as-nav-link" name="warehouse" asp-area="" asp-controller="Admin" asp-action="Warehouse">Склад</a>
                        </li>
                        <li class="nav-item">
                            <a class="as-nav-link" name="promotions" asp-area="" asp-controller="Admin" asp-action="Promotions">Акции</a>
                        </li>
                        <li class="nav-item">
                            <a class="as-nav-link" name="" asp-area="" asp-controller="" asp-action="">Заказы</a>
                        </li>
                        <li class="nav-item">
                            <a class="as-nav-link" name="" asp-area="" asp-controller="" asp-action="">Статистика</a>
                        </li>
                        <li class="nav-item">
                            <a class="as-nav-link" name="" asp-area="" asp-controller="Account" asp-action="LogOut">Выйти</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - AnyStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
